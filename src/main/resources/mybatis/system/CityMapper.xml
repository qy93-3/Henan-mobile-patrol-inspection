<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.project.system.city.mapper.CityMapper">
    
    <resultMap type="City" id="CityResult">
        <result property="id"    column="id"    />
        <result property="cityId"    column="city_id"    />
        <result property="city"    column="city"    />
    </resultMap>
	
	<sql id="selectCityVo">
        select id, city_id, city from tbl_city
    </sql>
	
    <select id="selectCityList" parameterType="City" resultMap="CityResult">
        <include refid="selectCityVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
             <if test="cityId != null  and cityId != '' "> and city_id = #{cityId}</if>
             <if test="city != null  and city != '' "> and city = #{city}</if>
         </where>
    </select>
    
    <select id="selectCityById" parameterType="Integer" resultMap="CityResult">
        <include refid="selectCityVo"/>
        where id = #{id}
    </select>

    <select id="selectCityByCode" parameterType="String" resultMap="CityResult">
        <include refid="selectCityVo"/>
        where city_id = #{cityId}
    </select>
        
    <insert id="insertCity" parameterType="City">
        insert into tbl_city
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null  ">id,</if>
			<if test="cityId != null  and cityId != ''  ">city_id,</if>
			<if test="city != null  and city != ''  ">city,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null  ">#{id},</if>
			<if test="cityId != null  and cityId != ''  ">#{cityId},</if>
			<if test="city != null  and city != ''  ">#{city},</if>
         </trim>
    </insert>
	 
    <update id="updateCity" parameterType="City">
        update tbl_city
        <trim prefix="SET" suffixOverrides=",">
            <if test="cityId != null  and cityId != ''  ">city_id = #{cityId},</if>
            <if test="city != null  and city != ''  ">city = #{city},</if>
        </trim>
        where id = #{id}
    </update>

	<delete id="deleteCityById" parameterType="Integer">
        delete from tbl_city where id = #{id}
    </delete>
	
    <delete id="deleteCityByIds" parameterType="String">
        delete from tbl_city where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>